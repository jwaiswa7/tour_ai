<section class="py-12 bg-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-gray-900">Hotels</h2>
    </div>
    
    <!-- Scrollable Content -->
    <div class="relative" data-controller="scroll">
      <!-- Optional scroll buttons -->
      <button data-action="click->scroll#scrollLeft" 
              class="absolute left-0 top-1/2 -translate-y-1/2 z-10 bg-white p-2 rounded-full shadow-lg hover:bg-gray-100 lg:flex hidden items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
        </svg>
      </button>
      
      <!-- Scrollable container -->
      <div data-scroll-target="container" 
           class="flex overflow-x-auto gap-4 scroll-smooth snap-x snap-mandatory scrollbar-hide">
        <% 5.times do %>
          <%#= render partial: "hotels/hotel", locals: {name: "Hotel #{rand(1..5)}"} %>
          <%= render partial: "shared/pulse_animation" %>
        <% end %>
      </div>
      
      <!-- Optional scroll buttons -->
      <button data-action="click->scroll#scrollRight"
              class="absolute right-0 top-1/2 -translate-y-1/2 z-10 bg-white p-2 rounded-full shadow-lg hover:bg-gray-100 lg:flex hidden items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
        </svg>
      </button>
    </div>
  </div>
</section>