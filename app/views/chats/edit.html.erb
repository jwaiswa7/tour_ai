<!-- Outer Container -->
  <div class="flex flex-col lg:flex-row h-screen">
    <!-- Left Div (Chat Section) -->
    <div class="w-full lg:w-1/2 h-screen bg-white border-r flex flex-col">
      <!-- Chat Messages (Scrollable Area) -->
      <div class="flex-grow overflow-y-auto p-4 space-y-6">
        <% 5.times do %>
        <%= render partial: "ai_message", locals: { message: "Hello, how can I help you today?" } %>
        <!-- User Message -->
        <%= render partial: "user_message", locals: { message: "Hello, how can I help you today?" } %>
        <% end %>
      </div>
      <div class="border-t p-4">
        <%= render partial: "chats/form", locals: { chat: @chat } %>
      </div>
    </div>

    <!-- Right Div (Styled with Rounded Borders, Shadow, and White Background) -->
    <div class="hidden lg:flex w-1/2 h-screen items-center justify-center bg-white rounded-lg shadow-lg">
       <h1 class="text-2xl text-gray-800">Div 2 Content</h1>
    </div>
  </div>