<%= form_with model: itinerary do |f| %>
  <%= f.hidden_field :random_id, value: random %>
  <div class="relative  w-full mb-5">
    <%= f.text_field :country, placeholder: "Country", class: "pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-black border-gray-200" %>
    <%= f.label :country, class: "absolute duration-300 top-3 - origin-0 text-gray-500" %>
    <span class="text-sm text-red-600 hidden" id="error">Name is required</span>
  </div>
  <div class="relative  w-full mb-5">
    <%= f.text_field :city, placeholder: "City", class: "pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-black border-gray-200" %>
    <%= f.label :city, class: "absolute duration-300 top-3 - origin-0 text-gray-500" %>
    <span class="text-sm text-red-600 hidden" id="error">Name is required</span>
  </div>
  <div class="relative  w-full mb-5">
    <%= f.number_field :number_of_people, placeholder: "Number of people", min: 0, class: "pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-black border-gray-200" %>
    <%= f.label :number_of_people, class: "absolute duration-300 top-3 - origin-0 text-gray-500" %>
    <span class="text-sm text-red-600 hidden" id="error">Name is required</span>
  </div>
  <div class="flex flex-row space-x-4">
    <div class="relative  w-full mb-5">
      <%= f.date_field :start_date, placeholder: "Start date", min: Date.today, class: "pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-black border-gray-200" %>
      <%= f.label :start_date, class: "absolute duration-300 top-3 - origin-0 text-gray-500" %>
      <span class="text-sm text-red-600 hidden" id="error">Name is required</span>
    </div>
    <div class="relative  w-full mb-5">
      <%= f.date_field :end_date, placeholder: "End date", min: Date.today, class: "pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-black border-gray-200" %>
      <%= f.label :end_date, class: "absolute duration-300 top-3 - origin-0 text-gray-500" %>
      <span class="text-sm text-red-600 hidden" id="error">Name is required</span>
    </div>
  </div>
  <%= f.submit "Submit", class: "text-sm bg-orange-500 text-white px-6 py-3 rounded-lg hover:bg-orange-600" %>
<% end %>