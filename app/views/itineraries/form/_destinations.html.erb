<div data-form-navigation-target="step" class="hidden">
    <%= form.label :cities, 'Select Destinations', class: 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2' %>
    <div class="lex flex-wrap items-stretch grid w-full gap-6 md:grid-cols-3" >
      <% Itinerary::places_to_visit.each_with_index do |destination, index| %>
      <div class="block flex-1">
        <%= form.check_box :destination_list, { multiple: true, class: 'hidden peer', id: "itinerary_destination_#{index}" }, destination[:place], nil %>
        <%= form.label "destination_#{index}", class: 'inline-flex items-center justify-between w-full p-2 text-gray-500 bg-white border-2 border-gray-200 rounded-lg cursor-pointer dark:hover:text-gray-300 dark:border-gray-700 peer-checked:border-blue-600 hover:text-gray-600 dark:peer-checked:text-gray-300 peer-checked:text-gray-600 hover:bg-gray-50 dark:text-gray-400 dark:bg-gray-800 dark:hover:bg-gray-700'  do %>
        <!-- block --> 
        <div>
          <% unless destination[:image].nil? %>
            <%= image_tag "places_to_visit/#{destination[:image]}", height: 100,  class: "rounded-t-lg object-scale-down h-48 w-auto" %>
          <% end %>
          <div class="p-5">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= destination[:place] %></h5>
            <p class="mb-3 text-sm text-gray-700 dark:text-gray-400"><%= destination[:activities].join(", ") %></p>
          </div>
        </div>
        <!-- end block -->
        <% end %>
      </div>
      <% end %>
    </div>
  </div>