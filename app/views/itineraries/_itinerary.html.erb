<%= turbo_frame_tag "itinerary" do %>
  <div data-itinerary-id=<%= itinerary.id %> data-controller="itinerary">
    <div data-itinerary-target="loader" data-target="itinerary.loading" class="flex items-center justify-center h-20">
      <svg class="w-10 h-10 text-gray-500 dark:text-gray-400 animate-spin" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" d="M4 12a8 8 0 018-8V2.5" stroke="currentColor" stroke-width="4"></path>
      </svg>
      <p class="ml-5 text-sm text-gray-400">Generating Itinerary</p>
      <%= link_to "Cancel", "#", class: 'ml-5 text-sm text-red-500', data: { turbo_frame: "itinerary", turbo_stream: true } %>
    </div>
    <div data-itinerary-target='message' class="flex items-center justify-center h-10 hidden"></div>
  </div>
<% end %>