<div class="flex items-center justify-center">
  <div class="w-full max-w-md p-6">
    <h2 class="text-2xl font-semibold text-gray-800 text-center mb-6">Guides</h2>

    <%= form_for(:user, url: user_session_path, html: { class: "space-y-4" }) do |f| %>
      <!-- Email Field -->
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
        <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#111827E6] focus:ring-black text-sm" %>
      </div>

      <!-- Password Field -->
      <div>
        <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
        <%= f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#111827E6] focus:ring-black text-sm" %>
      </div>

      <!-- Remember Me -->
      <div class="flex items-center">
        <%= f.check_box :remember_me, id: "remember_me", class: "h-4 w-4 text-black border-gray-300 rounded focus:ring-black" %>
        <label for="remember_me" class="ml-2 block text-sm text-gray-900">Remember me</label>
      </div>

      <!-- Submit Button -->
      <div>
        <%= f.submit "Sign In", class: "w-full items-center justify-center rounded-md text-sm font-medium text-[#f9fafb] disabled:pointer-events-none disabled:opacity-50 bg-black hover:bg-[#111827E6] h-10 px-4 py-2" %>
      </div>
    <% end %>

    <!-- Additional Links -->
    <div class="mt-4 text-center text-sm text-gray-600">
      <p>
        <%= link_to "Forgot your password?", new_user_password_path, class: "text-indigo-600 hover:underline" %>
      </p>
      <p>
        <%= link_to "Don't have an account? Sign up", new_user_registration_path, class: "text-indigo-600 hover:underline" %>
      </p>
    </div>
  </div>
</div>