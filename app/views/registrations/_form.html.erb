<div class="flex items-center justify-center">
  <div class="w-full max-w-md p-6">
    <h2 class="text-2xl font-semibold text-gray-800 text-center mb-6">Register guide</h2>

    <%= form_for(:user, url: user_registration_path, html: { class: "space-y-4" }) do |f| %>
      <!-- Email Field -->
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
        <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#111827E6] focus:ring-black text-sm" %>
      </div>

      <!-- Password Field -->
      <div>
        <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
        <%= f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#111827E6] focus:ring-black text-sm" %>
      </div>

      <!-- Password confirmation -->
      <div>
        <label for="password_confirmation" class="block text-sm font-medium text-gray-700">Password</label>
        <%= f.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#111827E6] focus:ring-black text-sm" %>
      </div>

      <!-- Submit Button -->
      <div>
        <%= f.submit "Register", class: "w-full items-center justify-center rounded-md text-sm font-medium text-[#f9fafb] disabled:pointer-events-none disabled:opacity-50 bg-black hover:bg-[#111827E6] h-10 px-4 py-2" %>
      </div>
    <% end %>

    <!-- Additional Links -->
    <div class="mt-4 text-center text-sm text-[#111827E6]">
      <p>
        <%#= link_to "Forgot your password?", new_user_password_path, class: "text-[#111827E6] hover:underline" %>
      </p>
      <p>
        <button class="text-[#111827E6] hover:underline" data-action="click->toggle-signup#toggle">Sign in</button>
      </p>
    </div>
  </div>
</div>